{
  "manifest_version": 3,
  "name": "WikiPath - Wikipedia Journey Tracker",
  "version": "1.0.0",
  "description": "Track and visualize your Wikipedia browsing journey as an interactive network graph",
  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "*://*.wikipedia.org/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["visualize.html", "history.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
